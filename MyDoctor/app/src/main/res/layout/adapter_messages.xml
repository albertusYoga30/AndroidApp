<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/user_image_message"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginVertical="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/user_message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_message"
        app:layout_constraintLeft_toRightOf="@id/user_image_message"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/black_custom"
        android:fontFamily="@font/nunito_regular"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/value_message"
        app:layout_constraintTop_toBottomOf="@+id/user_name_message"
        app:layout_constraintLeft_toRightOf="@id/user_image_message"
        android:layout_marginLeft="12dp"
        android:textSize="12sp"
        android:fontFamily="@font/nunito_light"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/message"
        android:layout_marginTop="20dp"
        android:background="@color/color_line"/>

</androidx.constraintlayout.widget.ConstraintLayout>