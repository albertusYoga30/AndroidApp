<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_hospital"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginVertical="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/icon_hospital"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hospital_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_regular"
        android:text="@string/hospital_name"
        android:textColor="@color/black_custom"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/icon_hospital"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hospital_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/nunito_light"
        android:text="@string/hospital_location"
        android:textColor="@color/color_hospital_location"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/icon_hospital"
        app:layout_constraintTop_toBottomOf="@id/hospital_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/icon_hospital" />


</androidx.constraintlayout.widget.ConstraintLayout>